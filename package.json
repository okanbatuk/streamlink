{
  "name": "streamlink",
  "main": "dist/server.js",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "build": "esbuild src/server.ts --bundle --platform=node --outdir=dist --minify --sourcemap --external:pg --external:ioredis --external:@fastify/*",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^9.1.0",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.5",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "dotenv-safe": "^9.1.0",
    "fastify": "^5.6.2",
    "ioredis": "^5.8.2",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3"
  }
}
